<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - RecipeMaster</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212; /* Dark background for the body */
      color: #ffffff; /* Ensuring text is white for all general content */
    }
    .container {
      border: 1px solid #333; /* Subtle border for the container */
      background-color: #1e1e1e; /* Slightly lighter background for the container */
      border-radius: 10px; /* Rounded corners for the container */
      padding: 20px;
    }
    .title {
      font-size: 3em; /* Increase the size of the title */
    }
    .form-group label {
      color: #ffffff; /* White color for form labels */
    }
    .table {
      background-color: #242424; /* Dark background for tables */
      border-color: #333; /* Dark borders for table and cells */
    }
    .table th, .table td {
      border-color: #333;
      color: #ffffff; /* Ensuring table content is also white */
    }
    .btn-primary {
      background-color: #007bff; /* Standard bootstrap primary color */
      border-color: #007bff;
    }
    .btn-danger {
      background-color: #dc3545; /* Standard bootstrap danger color */
      border-color: #dc3545;
    }
    .btn-primary:hover {
      background-color: #0056b3; /* Darker shade for hover state */
    }
    .btn-danger:hover {
      background-color: #c82333; /* Darker shade for hover state */
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center title">RECIPEMASTER</h1>
    <form action="/search/results" method="POST">
      <div class="form-group">
        <label for="ingredients">Select Ingredients:</label>
        <table class="table table-bordered ingredient-table">
          <thead>
            <tr>
              <th>Select</th>
              <th>Ingredient</th>
            </tr>
          </thead>
          <tbody>
            <% ingredients.forEach(ingredient => { %>
              <tr>
                <td><input type="checkbox" name="ingredients[]" value="<%= ingredient._id %>"></td>
                <td><%= ingredient.name %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Search Recipes</button>
    </form>
    <div class="text-center mt-3">
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
  </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - RecipeMaster</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }
        .container {
            background-color: #1e1e1e;
            border-radius: 10px;
            padding: 20px;
        }
        .table {
            background-color: #242424;
            border-color: #333;
        }
        .table th, .table td {
            border-color: #333;
            color: #ffffff;
        }
        .recipe-img {
            max-width: 100px;
            max-height: 100px;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        a {
            color: #00bfff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Recipe Search Results</h1>
        <% if (recipes.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Recipe Name</th>
                    <th>Ingredients</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <% recipes.forEach(recipe => { %>
                <tr>
                    <td><a href="/search/recipes/<%= recipe._id %>"><%= recipe.name %></a></td>
                    <td><%= recipe.ingredients.map(ingredient => ingredient.name).join(', ') %></td>
                    <td><img class="recipe-img" src="/recipes/<%= recipe.name %>.jpg" alt="<%= recipe.name %>"></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="text-center">No recipes found for the selected ingredients.</p>
        <% } %>
        <div class="text-center mt-3">
            <a href="/home" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</body>
</html>